# File sets
# #############################################

OBJECTS :=

OBJECTS += $(OBJDIR)/Client.o
OBJECTS += $(OBJDIR)/ClientEntityCollection.o
OBJECTS += $(OBJDIR)/ClientState.o
OBJECTS += $(OBJDIR)/ConnectionManager.o
OBJECTS += $(OBJDIR)/Scenes.o
OBJECTS += $(OBJDIR)/ServerConnection.o
